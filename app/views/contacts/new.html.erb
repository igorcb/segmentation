<% provide(:title, 'New Contact') %>
<h1>New Contact</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control' %>

    	<%= f.label :state  %>
    	<%= f.select( :state, select_state, {include_blank: "Select State"}, {class: "form-control"} ) %>      

    	<%#= f.label :office  %>
    	<%#= f.select( :office, select_office, {include_blank: "Select office"}, {class: "form-control"} ) %>      

      <%= f.label :office %>
      <%= f.number_field :office, class: 'form-control' %>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
