<div class="panel panel-default">
  <div class="pagination">
    <%= will_paginate %>
  </div>
  <div class="panel-heading">Listing Contacts</div>
  <div class="panel-body">
    <%= link_to 'New Contact', new_contact_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>email</th>
            <th>Age</th>
            <th>State</th>
            <th>Office</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= link_to contact.name, contact %></td>
              <td><%= contact.email %></td>
              <td><%= contact.age %></td>
              <td><%= contact.state %></td>
              <td><%= contact.office.name if contact.office.present? %></td>
              <td><%= link_to 'Show', contact, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
    <%= will_paginate %>
  </div>
</div>
